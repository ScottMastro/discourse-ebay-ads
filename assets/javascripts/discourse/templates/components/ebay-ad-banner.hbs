    {{i18n "ebay_ads.advertisement"}} â“˜

    <a class="all-listings-link" href="/ebay"> {{i18n "ebay_ads.banner.all_listings"}} </a>
  </div>

<div class="ebay-ad-container">
  <div class="impression-observer"></div>
  {{#if this.model}}

    <div class="ebay-ad-banner ebay-ad-flex">

      <a class="ebay-ad-item-info ebay-ad-flex" href="https://www.ebay.com/itm/{{this.model.legacy_id}}?mkevt=1&mkcid=1&mkrid=711-53200-19255-0&campid={{this.model.epn_id}}&toolid=1001"
        onclick={{action this.trackEbayClick}} 
        target="_blank">

        <div class="ebay-ad-image">
          <img class="ebay-ad-thumbnail-img" src="{{this.model.image_url}}" alt="">
        </div>

        <div class="ebay-ad-info-details">
          
          <div class="ebay-ad-title">
            {{this.model.title}}
          </div>


          <div class="ebay-ad-clickables-container ebay-ad-flex">

            {{#if false}}
              <a class="ebay-ad-clickable" href="https://www.ebay.com/usr/{{this.model.seller}}?mkevt=1&mkcid=1&mkrid=711-53200-19255-0&campid={{this.model.epn_id}}&toolid=1001"
                onclick={{action this.trackEbayClick}} 
                target="_blank">
                <div class="ebay-ad-logo">
                  <img alt="ebay" class="ebay-ad-thumbnail-logo" src="/plugins/discourse-ebay-ads/images/ebay_grey.svg">
                </div>
                <div class="ebay-ad-seller-info-name">{{this.model.seller}} <div class="ebay-ad-seller-feedback">({{this.model.feedback_score}})</div></div> 
                <div class="ebay-ad-seller-info-percent">{{this.model.feedback_percent}}% feedback</div> 
              </a>
            {{/if}}

            
            {{#if this.model.seller_info}}
              <a class="ebay-ad-clickable" href="/u/{{this.model.seller_info.username}}">
                <div class="ebay-ad-logo">
                  <img alt="efour" class="ebay-ad-thumbnail-logo" src="/plugins/discourse-ebay-ads/images/efour_grey.svg">
                </div>
                <div class="ebay-ad-seller-info-name">{{this.model.seller_info.username}}</div> 
                <div class="ebay-ad-seller-info-title">{{this.model.seller_info.title}}</div> 
                <img class="ebay-ad-avatar" src={{this.model.seller_info.avatar}}>
              </a>
            {{/if}}


            <div class="vote-div">
              <DButton
                @action={{(fn this.likeAd)}}
                @icon="{{if (eq this.voteStatus 1) 'heart' 'far-heart'}}"
                class="vote-button vote-like-button {{if (eq this.voteStatus 1) 'vote-up-cast' 'no-vote-cast'}}"
              />
              <DButton
                @action={{(fn this.dislikeAd)}}
                @icon="{{if (eq this.voteStatus -1) 'times-circle' 'times'}}"
                class="vote-button vote-dislike-button {{if (eq this.voteStatus -1) 'vote-down-cast' 'no-vote-cast'}}"
              />
            </div>

            
          </div>

          
          {{#if false}}
            <div class="ebay-ad-price">
              {{this.formattedPrice}} {{this.model.currency}}
            </div>
          {{/if}}

        </div>
      </a>

    </div>

  {{/if}}
</div>
